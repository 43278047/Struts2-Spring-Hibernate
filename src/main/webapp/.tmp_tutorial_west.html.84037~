		$('#tt1').tree({    
			url:'tree_data.json',
		//	onClick: function(node){
		//		alert(node.text);  // ���û������ʱ����ʾ
		//	},
			onClick: function(node){
				var p = $(this).tree('getParent',node.target);
				console.info(p);
				var c = $(this).tree('getChildren',node.target);
				console.info(c);
				console.info(c[0].text);
			},
			onDblClick: function(node){
				if(node.state == 'closed'){
					$(this).tree('expand',node.target);
				}else{
					$(this).tree('collapse',node.target);
				}
			},
			onContextMenu: function(e, node){
				e.preventDefault();
				// ���ҽڵ�
				$('#tt').tree('select', node.target);
				// ��ʾ��ݲ˵�
				$('#mm').menu('show', {
					left: e.pageX,
					top: e.pageY
				});
			}
		});
		
	/*	$('#tt2').tree({    
			lines:true  
		});
		$('#tt2').tree('loadData',data);
	*/
		$('#tt2').tree({    
			data: data,
			onClick: function(node){
			//	alert(node.text);  // ���û������ʱ����ʾ
			},
			onLoadSuccess: function(node,data){
				var t = $(this);
				console.info(node);
				console.info(data);
				if(data){
					$(data).each(function(index,d){
						if(this.state=='open'){  	//  'closed'
							t.tree('collapseAll');  //  'expandAll'
						}
					});
				}
			}
		});
		$('#tt3').tree({    
			url:'TreeServlet'   
		});
	});
	
	function search(){
		alert("sss");
	}
</script>

