<script type="text/javascript">
	$(function(){
		var data = 
		[{    
		    "id":1,    
		    "text":"Folder2",    
		    "iconCls":"icon-save",
		    "children":[{    
		        "text":"File1",    
		        "checked":true   
		    },{    
		        "text":"Books",    
		        "state":"open",    
		        "attributes":{    
		            "url":"/demo/book/abc",    
		            "price":100    
		        },    
		        "children":[{    
		            "text":"PhotoShop",    
		            "checked":true   
		        },{    
		            "id": 8,    
		            "text":"Sub Bookds",    
		            "state":"closed"   
		        }]    
		    }]    
		},{    
		    "text":"Languages",    
		    "state":"closed",    
		    "children":[{    
		        "text":"Java"   
		    },{    
